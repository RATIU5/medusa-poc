{
  "compilerOptions": {
    "target": "es2019",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@admin/*": ["src/admin/*"],
      "@api/*": ["src/api/*"],
      "@jobs/*": ["src/jobs/*"],
      "@links/*": ["src/links/*"],
      "@modules/*": ["src/modules/*"],
      "@scripts/*": ["src/scripts/*"],
      "@subscribers/*": ["src/subscribers/*"],
      "@workflows/*": ["src/workflows/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "checkJs": false
  },
  "ts-node": {
    "swc": true
  },
  "exclude": ["**/__tests__", "**/__fixtures__", "node_modules", "build", ".cache"]
}
