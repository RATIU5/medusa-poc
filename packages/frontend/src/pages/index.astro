---
import Base from "@layouts/base.astro";
import Section from "@components/layout/section.astro";
---

<Base>
  <!-- Hero -->
  <Section>
    <div
      class="bg-hero-y xl:max-w-[2000px] w-full min-h-[660px] mx-auto bg-cover bg-bottom xl:bg-left h-screen relative xl:items-center xl:bg-hero-x flex justify-center xl:justify-end"
    >
      <div
        class="bg-hero-gradient-y xl:bg-hero-gradient-x 2xl:bg-hero-gradient-x-lg w-full h-full top-0 left-0 absolute z-0 2xl:shadow-hero-insert-r"
      >
      </div>
      <div class="w-full xl:max-w-[45%] 4xl:max-w-3xl h-full z-10">
        <div
          class="w-full md:mx-auto xl:max-w-md flex justify-center xl:justify-end pt-10 md:pt-20 xl:pt-0 xl:items-center right-0 h-full text-center xl:text-left px-12 lg:px-0"
        >
          <h1
            class="text-yellow-50/90 h-fit max-h-full font-display text-[5rem] xs:text-[6rem] xs:leading-[5rem] sm:text-[8rem] md:text-[10rem] xl:text-[12rem] leading-[4rem] sm:leading-[7rem] md:leading-[8rem] xl:leading-[10rem] tracking-wider relative max-w-2xl"
          >
            For those who love their <span class="text-red-700/90">meat.</span>
          </h1>
        </div>
      </div>
    </div>
  </Section>
</Base>
