---
import Root from "@layouts/root.astro";
---

<Root>
  <header class="fixed z-20 w-full">
    <nav class="h-24 max-h-24 bg-stone-950/90 shadow-navbar">
      <div class="w-full h-full flex justify-center pt-4 px-8 mx-auto gap-12">
        <div class="w-48"></div>
        <div class="h-full w-full flex justify-end items-center gap-6">
          <a
            href="/"
            class="uppercase font-sans text-sm text-yellow-50/50 tracking-[0.2em] hover:text-yellow-50/90"
            >Best&nbsp;Sellers</a
          >
          <a
            href="/"
            class="uppercase font-sans text-sm text-yellow-50/50 tracking-[0.2em] hover:text-yellow-50/90"
            >Collection</a
          >
        </div>
        <a href="/" class="opacity-75 hover:opacity-100">
          <img
            src="/img/logo.webp"
            alt="Logo"
            class="w-20 h-20 min-w-20 max-w-20 rounded-full"
          />
        </a>
        <div class="h-full w-full flex justify-start items-center gap-6">
          <a
            href="/"
            class="uppercase font-sans text-sm text-yellow-50/50 tracking-[0.2em] hover:text-yellow-50/90"
            >About</a
          >
          <a
            href="/"
            class="uppercase font-sans text-sm text-yellow-50/50 tracking-[0.2em] hover:text-yellow-50/90"
            >Contact</a
          >
          <a
            href="/"
            class="uppercase font-sans text-sm text-yellow-50/50 tracking-[0.2em] hover:text-yellow-50/90"
            >Login</a
          >
        </div>
        <div class="w-48 flex justify-end gap-4">
          <button class="text-yellow-50/50 hover:text-yellow-50/90">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path><path
                d="M21 21l-6 -6"></path></svg
            >
          </button>
          <button class="text-yellow-50/50 hover:text-yellow-50/90">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
                d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
                d="M17 17h-11v-14h-2"></path><path d="M6 5l14 1l-1 7h-13"
              ></path></svg
            >
          </button>
        </div>
      </div>
    </nav>
  </header>
  <main class="relative">
    <slot />
  </main>
  <footer>
    <p>&copy; 2021</p>
  </footer>
</Root>
