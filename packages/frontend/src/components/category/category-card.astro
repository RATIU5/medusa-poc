---
export type Props = {
  name: string;
  slug: string;
};

const { name, slug } = Astro.props;
---

<a href={slug} class="text-beige-300 font-sans font-semibold">
  <div class="rounded-lg p-4 shadow-lg">
    <img src="/img/wagyu-topdown.png" alt="" class="h-40 w-40 rounded-lg" />
    <h3 class="text-2xl">{name}</h3>
  </div>
</a>
