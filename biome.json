{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": false,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 120,
      "indentStyle": "space",
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}